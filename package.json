{
  "name": "project-nolocimes",
  "private": true,
  "description": "The official development playground of Dreamist Labs' heyitsjhu",
  "author": "Johnny Hu <johnny@dreamistlabs.com>",
  "license": "UNLICENSED",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/heyitsjhu/nolocimes.git"
  },
  "bugs": {
    "url": "https://github.com/heyitsjhu/nolocimes/issues"
  },
  "homepage": "https://github.com/heyitsjhu/nolocimes#readme",
  "scripts": {
    "bootstrap": "lerna exec -- npm install",
    "build": "run-p build:*",
    "build:client": "cd frontend && npm install && npm run build",
    "changelog": "auto-changelog --template changelog-template.hbs -p -u",
    "changelog-debug": "auto-changelog --template changelog-template.hbs -p --template json --output changelog-preview.json",
    "cloc": "cloc --skip-win-hidden --exclude-dir=node_modules --exclude-list-file=.clocignore *",
    "deploy": "git push heroku master",
    "heroku-postbuild": "npm run build:client",
    "lint": "eslint backend frontend --ext .js,.jsx --color --fix-dry-run",
    "pre-commit": "npm run pretty-quick && npm test -- --changedFilesWithAncestor",
    "pre-push": "run-s lint test",
    "pretty-check": "prettier --check \"{backend,frontend}/**/*.{js,jsx}\"",
    "pretty-format": "npm run pretty-check -- --write",
    "pretty-quick": "pretty-quick --staged --pattern \"{backend,frontend}/**/*.*{js,jsx}\"",
    "start": "npm run start:server",
    "start:dev": "run-p start:client start:server",
    "start:client": "npm start --prefix frontend",
    "start:server": "nodemon -r esm index.js",
    "test": "jest --coverage --verbose"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "npm run pre-commit",
      "pre-push": "npm run pre-push"
    }
  },
  "jest": {
    "verbose": true,
    "moduleDirectories": [
      "node_modules",
      "backend",
      "frontend/src"
    ],
    "moduleFileExtensions": [
      "js",
      "jsx"
    ],
    "moduleNameMapper": {
      "\\.(jpg|ico|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/fileMock.js",
      "\\.(css|less)$": "<rootDir>/__mocks__/fileMock.js"
    },
    "roots": [
      "<rootDir>/backend",
      "<rootDir>/frontend"
    ],
    "testRegex": "((\\.|/*.)(spec|test))\\.js?$",
    "transformIgnorePatterns": [
      "node_modules/(?!(use-reducer-logger|animejs|@amcharts))"
    ]
  },
  "dependencies": {
    "axios": "^0.21.0",
    "body-parser": "^1.19.0",
    "contentful": "^7.14.13",
    "cookie-session": "^1.4.0",
    "crypto-js": "^4.0.0",
    "esm": "^3.2.25",
    "express": "~4.16.1",
    "http-errors": "^1.6.3",
    "js-logger": "^1.6.1",
    "mongoose": "^5.10.15",
    "nodemon": "^2.0.6",
    "rollbar": "^2.19.4"
  },
  "devDependencies": {
    "@babel/cli": "^7.12.1",
    "@babel/core": "^7.12.3",
    "@babel/node": "^7.12.6",
    "@babel/plugin-proposal-class-properties": "^7.12.1",
    "@babel/plugin-transform-runtime": "^7.12.1",
    "@babel/preset-env": "^7.12.1",
    "@babel/preset-react": "^7.12.5",
    "@babel/register": "^7.12.1",
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.1.0",
    "@testing-library/react-hooks": "^3.4.2",
    "@testing-library/user-event": "^12.1.10",
    "@typescript-eslint/eslint-plugin": "^4.7.0",
    "@typescript-eslint/parser": "^4.7.0",
    "auto-changelog": "^2.2.1",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^26.6.3",
    "cloc": "^2.7.0",
    "eslint": "^7.13.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^6.15.0",
    "eslint-config-react-app": "^6.0.0",
    "eslint-plugin-flowtype": "^5.2.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.3",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-testing-library": "^3.10.0",
    "husky": "^4.3.0",
    "jest": "26.6.0",
    "lerna": "^3.22.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.1.2",
    "pretty": "^2.0.0",
    "pretty-quick": "^3.1.0",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-router-dom": "^5.2.0",
    "react-scripts": "^4.0.0",
    "react-test-renderer": "^17.0.1",
    "typescript": "^4.0.5"
  },
  "optionalDependencies": {
    "win-node-env": "^0.4.0"
  }
}
