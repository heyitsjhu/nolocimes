{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "lib": ["dom", "dom.iterable", "es6", "es2017", "esnext", "esnext.asynciterable"],
    "baseUrl": "./",
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "suppressImplicitAnyIndexErrors": true,
    "moduleResolution": "node",
    "outDir": "./dist",
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "paths": {
      "~app/*": ["app/*"],
      "~middlewares/*": ["middlewares/*"],
      "~models/*": ["models/*"],
      "~routes/*": ["routes/*"],
      "~services/*": ["services/*"],
      "~types/*": ["types/*"],
      "~utils/*": ["utils/*"]
    }
  },
  "exclude": ["node_modules"],
  "include": ["**/*.js"]
}
